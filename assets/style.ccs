html, body{
  margin: 0;
  background: #000;
}

body{
  color: var(--text);
  font-family: "Julius Sans One", system-ui, sans-serif;
  letter-spacing: 0.5px;
  background: none;
}

body::before{
  content: "";
  position: fixed;
  inset: -30%;

  background: url("/assets/sfondo.jpg") no-repeat center center;
  background-size: cover;

  transform: scale(0.7);
  transform-origin: center;

  z-index: -1;
}
